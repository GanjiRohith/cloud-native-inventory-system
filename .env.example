# Database Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to GitHub!
# IMPORTANT: All password fields are REQUIRED - do not leave them empty!

# MySQL Configuration (REQUIRED)
MYSQL_HOST=mysql_db
MYSQL_PORT=3306
MYSQL_USER=inventory_user
MYSQL_PASSWORD=set_a_strong_password_here
MYSQL_DB=inventory_db

# MongoDB Configuration
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_USER=mongo_user
MONGO_PASSWORD=your_mongo_password_here
MONGO_DATABASE=inventory_mongo

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# Database Selection (mysql or mongodb)
DB_TYPE=mysql

# API Configuration
API_TIMEOUT=30
LOG_LEVEL=INFO
